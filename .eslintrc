{
    "extends": ["vue", "crockford"],
    "plugins": [
        "vue",
        "html"
    ],
    "settings": {
        "html/html-extensions": [".html", ".vue"],
        "html/xml-extensions": [".html", ".vue"]
    },
    "parser": "babel-eslint",
    "rules": {
        "no-underscore-dangle": 1,
        "strict": 1,
        "indent": ["warn", 2],
        "semi": ["error", "always"],
        "no-console": "off",
        "no-unused-vars": "warn",
        "no-continue": "warn"
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "validate": [ "javascript", "javascriptreact", { "language": "html", "autoFix": true } ],
}

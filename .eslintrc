{
    "extends": ["vue", "crockford"],
    "plugins": [
        "vue",
        "html"
    ],
    "parser": "babel-eslint",
    "rules": {
        "strict": 1,
        "indent": ["warn", 2],
        "semi": ["error", "always"],
        "no-console": "off"
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "validate": [ "javascript", "javascriptreact", { "language": "html", "autoFix": true } ],
}
